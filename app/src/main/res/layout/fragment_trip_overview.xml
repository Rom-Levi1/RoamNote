<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.TripOverviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/trip_overview_IMG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/no_photo_img"
            android:layout_marginHorizontal="@dimen/logo_margin"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/trip_overview_trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_trip_trip_name"
            android:layout_margin="@dimen/logo_margin"
            android:textColor="@color/Bagy_blue"
            android:textStyle="bold"
            android:textSize="@dimen/trip_overview_title"
            android:gravity="end"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/trip_overview_trip_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trip_overview_dates"
            android:layout_marginBottom="@dimen/logo_margin"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/logo_margin"
            android:textSize="@dimen/log_button_size"
            android:gravity="end"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/trip_overview_trip_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trip_overview_cost"
            android:layout_marginBottom="@dimen/logo_margin"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/logo_margin"
            android:textSize="@dimen/log_save_BTN_size"
            android:gravity="end"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_lineh_margin"
            android:background="@color/gray"
            android:layout_marginHorizontal="@dimen/logo_margin"
            android:layout_marginVertical="@dimen/login_linew_margin"/>


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/overview_pie_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp" />


        <GridLayout
            android:id="@+id/photosGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/logo_margin"
            android:layout_marginBottom="@dimen/login_linew_margin"
            android:paddingEnd="@dimen/login_linew_margin"
            android:columnOrderPreserved="false" />



    </LinearLayout>


</ScrollView>